<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout" xmlns:t="/lib/hudson" xmlns:f="/lib/form">
  <f:entry title="ID of a light" field="lightId">
    <f:textbox />
  </f:entry>
  <f:entry title="Color for Pre-Build Trigger" field="preBuild">
    <f:textbox default="blue" />
  </f:entry>
  <f:entry title="Color for Good Build" field="goodBuild">
    <f:textbox default="green" />
  </f:entry>
  <f:entry title="Color for Unstable Build" field="unstableBuild">
    <f:textbox default="yellow" />
  </f:entry>
  <f:entry title="Color for Bad Build" field="badBuild">
    <f:textbox default="red" />
  </f:entry>
  <f:entry title="Brightness for Build (1-255)" field="brightness">
    <f:textbox default="255" />
  </f:entry>
</j:jelly>
